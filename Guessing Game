<body>
    <h1>state the game</h1>
    <script>
        var loss = 0;
        var win = 0;
        for (var i = 0; i < 5; i++) {
            var num = parseInt(prompt("enter a number:- </br>"));
            var randomnumber = Math.floor(Math.random() * 5 + 1);
            if (num == randomnumber) {
                document.write("we have won the mass </br>");
                win++;
            } else {
                document.write("we are loss </br>");
                document.write("random number is :-" + randomnumber + "</br>");
                loss++;
            }
        }
        document.write("win :-" + win + "</br>");
        document.write("loss :-" + loss + "</br>");
    </script>
