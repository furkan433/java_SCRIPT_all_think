------------------------------------------------------
body {
    background-color: aqua;
}

.para-style {
    color: red;
    font-size: 3rem;
    font-weight: bold;
    font-style: italic;
}
------------------------------------------------
function addStyle() {
    var color = document.querySelector("#pop");
    color.classList.add("para-style");
}

function reStyle() {
    var color = document.querySelector("#pop");
    color.classList.remove("para-style");
}
